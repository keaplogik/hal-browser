{
  "manifest_version": 2,

  "name": "HAL Browser",
  "description": "This extension allows for cross domain HAL API exploring.",
  "version": "1.0",

  "browser_action": {
    "default_title": "HAL Browser",
    "default_popup": "background.html"
  },

  "permissions": [
    "webRequest"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
